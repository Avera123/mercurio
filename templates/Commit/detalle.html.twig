{% extends 'base.html.twig' %}

{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}
    <div id="wrapper">
    {{ include('Bloques/menu.html.twig') }}
    {{ include('Bloques/menuIzquierdo.html.twig') }}
    <div class="content-page">
    <!-- Start content -->
    <div class="content">
    <div class="container">
    {% block content %}
    <div class="row">
        <div class="col-md-12" style="padding: 20px;">
            <div class="panel panel-color panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Detalles de la actualizacion: <span class="label label-default">#{{ commit.sha }} </span></h3><br>
                    <div class="row">
                        <div class="col-md-4">
                            {% dump(commit) %}
                            <strong>Autor:</strong> {{ commit.commit.author.name }} <br><br>
                            <strong>Fecha:</strong> {{ commit.commit.author.date | date('y-m-d H:i:s') }}
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <h4>Gesti√≥n interna:</h4>
                        <div class="row">
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label for="field-3" class="control-label">Descripcion:</label>
                                    <p>{{ commit.commit.message }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer" style="text-align: right;">
                    <a onclick="history.back()"
                       class="btn btn-default btn-bordered waves-effect w-md m-b-5"
                       style="float: right;"><span class="glyphicon glyphicon-arrow-left"></span> VOLVER</a>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
        {{ include('Bloques/pie.html.twig') }}

    {% endblock %}
{% endblock %}