{% extends 'base.html.twig' %}
{% block bodyAtt %}class="fixed-left"{% endblock %}

{% block body %}
<div id="wrapper">
    <!-- {{ include('Bloques/menu.html.twig') }} -->

    <!-- {{ include('Bloques/menuIzquierdo.html.twig') }} -->
    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container">
                {% block content %}
                <div class="row">
                    <div class="col-xs-12">
                        <div class="page-title-box">
                            <h4 class="page-title" style="padding-right: 10px;">Implementacion - General</h4>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <div id="datatable-keytable_wrapper"
                                 class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                <table id="datatable-keytable"
                                       class="table table-striped table-bordered dataTable no-footer table-oro"
                                       role="grid" aria-describedby="datatable-keytable_info"
                                       style="position: relative;">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting" tabindex="0" aria-controls="datatable-keytable"
                                            aria-label="Name: activate to sort column ascending">Id
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="datatable-keytable">
                                            Cliente
                                        </th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="datatable-keytable"
                                            aria-sort="ascending">
                                            Descripcion
                                        </th>
                                        <th>
                                        </th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% if mensaje != "" %}
                                    <tr class="odd">
                                        <td valign="top" colspan="4" class="dataTables_empty">{{ mensaje }}</td>
                                    </tr>
                                    {% else %}
                                    {% for implementacion in implementaciones %}
                                        <tr role="row" class="odd">
                                            <td>{{ implementacion.codigoImplementacionPk }}</td>
                                            <td>
                                                <strong>{{ implementacion.nombreComercial }}</strong>
                                            </td>
                                            <td>{{ implementacion.descripcion }}</td>
                                            <td style="text-align: center;">
                                                <a href="{{ path('implementacionDetalle', { 'codigoImplementacion':  implementacion.codigoImplementacionPk }) }}"
                                                   class="btn btn-info waves-effect waves-light btn-xs"><i
                                                            class="glyphicon glyphicon-eye-open"></i>
                                                </a>
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                {% endblock %}
            </div>
        </div>
    </div>
</div>
{{ include('Bloques/pie.html.twig') }}
{% endblock %}
